<%include ../partials/header %>

<div class="container">
 <div class="row">
     <div class="col-md-3">
         <p class="lead">YelpCamp</p>
         <div class="list-group">
             <li class="list-group-item active">Info 1</li>
             <li class="list-group-item">Info 2</li>
             <li class="list-group-item">Info 3</li>
         </div>
        </div> 
         <div class="col-md-9">
             <div class="thumb-nail">
                    
                <img class="img-responsive" src="<%=campFound.image%>"></img>
                <div class="caption-full">
                      
                        <h4 class="pull-right">$9/night</h4>

                        <h3><a><%=campFound.Title%></a></h3>
                        
                        <p><%=campFound.desc%></p>
                        <p><em><strong>Submitted By:</strong> <%=campFound.author.username%></em></p>

                        <a href="/campground/<%=campFound._id%>/edit" class="btn btn-warning btn-large">Edit</a>

                        <form action="/campground/<%=campFound._id%>?_method=DELETE" method="POST">
                          
                            <button class="btn btn-danger">Delete</button>
                         
                        </form>

                </div>
                
             
              </div>

              <div class="well">
                  <div class="text-right">
                        <a href="./<%=campFound._id%>/comments/new" class="btn btn-success"> Add a comment here! </a>

                  </div>
                  <hr>
                  <%campFound.comments.forEach(function(com){%>

                  <div class="row">
                      <div class="col-md-12">

                            <strong><%=com.author.username%></strong> <span class="pull-right">10 days ago</span>
                            <p>  <%=com.comment%></p>

                      </div>
                  </div>
                  

                    
                    
                    <%});%>
                    

              </div>
         </div>
     
 </div>    

</div>







<%include ../partials/footer %>