<%include ../partials/header %>
<div class="container">
    <div class="row well" >
            
          
                    
            <h1 style="text-align:center">Add a comment to the campgrounnd "<%=selectedcamp.Title%>"!</h1>
            <div style="width:30%; margin:30 auto;">
           
                    <form  action="/campground/<%=selectedcamp._id%>/comments" method="POST" >

                        
                        <div class="form-group">
                                <input class="form-control" type="text" name="comments[comment]" placeholder="Comment here"/>
                        </div>
                        
                        <div class="form-group">
                                <button class="btn btn-primary btn-block" type="submit" name="submit">Submit</button>
                        </div>
                        
                        
                        
                        
                        
                    </form>
                        <a href="/campground/:<%=selectedcamp._id%>">Go back</a>
            </div>
            
    </div>
</div>

<%include ../partials/footer %>