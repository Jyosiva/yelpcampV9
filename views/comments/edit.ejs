<%include ../partials/header %>
<div class="container">
    <div class="row well" >
            
          
                    
            <h1 style="text-align:center">Edit comment"!</h1>
            <div style="width:30%; margin:30 auto;">
           
                    <form  action="/campground/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST" >

                        
                        <div class="form-group">
                                <input class="form-control" type="text" name="comment[comment]" value="<%=comment.comment%>"/>
                        </div>
                        
                        <div class="form-group">
                                <button class="btn btn-primary btn-block" type="submit" name="submit">Submit</button>
                        </div>
                        
                        
                        
                        
                        
                    </form>
                        <a href="/campground/:<%=campground_id%>">Go back</a>
            </div>
            
    </div>
</div>

<%include ../partials/footer %>